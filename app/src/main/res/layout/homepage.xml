<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="30dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="30dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/menuButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/menuimage"
            android:text="Menu"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <TextView
            android:id="@+id/homeTopTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/nanumsquareroundeb"
            android:text="껨딜"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/menuButton"
            app:layout_constraintStart_toEndOf="@+id/menuButton"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/communityButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/communityimage"
            android:text="Community"
            app:layout_constraintBottom_toBottomOf="@+id/homeTopTextView"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/homeTopImgViewPager"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/communityButton" />

        <TextView
            android:id="@+id/textBelowImageView"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:fontFamily="@font/nanumsquareroundeb"
            android:shadowColor="#A9A9A9"
            android:shadowDy="7.0"
            android:shadowRadius="2.0"
            android:text="특가 상품"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/homeTopImgViewPager"
            app:layout_constraintTop_toBottomOf="@+id/homeTopImgViewPager" />

        <TextView
            android:id="@+id/textBelowImageViewSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsqarerountr"
            android:text="연말 연시 할인 행사를 즐겨보세요"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/textBelowImageView"
            app:layout_constraintTop_toBottomOf="@+id/textBelowImageView" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/homeTopImgPageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ci_drawable="@color/black"
            app:ci_drawable_unselected="@color/gray"
            app:layout_constraintBottom_toTopOf="@+id/textBelowImageViewSecondary"
            app:layout_constraintEnd_toEndOf="@+id/homeTopImgViewPager"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textBelowImageView"
            app:layout_constraintTop_toBottomOf="@+id/homeTopImgViewPager"
            app:layout_constraintVertical_bias="0.2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>