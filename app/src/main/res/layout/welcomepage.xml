<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomepage_background"
    android:orientation="vertical">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/slideLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/welcompage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/GGamdeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="껨딜"
                android:textColor="@color/white"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="239dp" />

            <android.widget.Button
                android:id="@+id/welcomeProgressStateButton1"
                android:layout_width="85dp"
                android:layout_height="15dp"
                android:background="@drawable/welcomeprogress"
                />

            <android.widget.Button
                android:id="@+id/welcomeProgressStateButton2"
                android:layout_width="85dp"
                android:layout_height="15dp"
                android:background="@drawable/welcomeprogress2"
                />

            <android.widget.Button
                android:id="@+id/welcomeProgressStateButton3"
                android:layout_width="85dp"
                android:layout_height="15dp"
                android:background="@drawable/welcomeprogress2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>